node("jenkins-agent"){
    stage("Git clone"){
        git url: 'git@github.com:Daimero88/vector-role.git'
    }
    stage("Set var prod_run"){
        if(env.IS_PROD){
            prod_run=true
        }
        else {
            prod_run=false
        }
    }
    stage("Run playbook"){
        if (prod_run){
            sh 'anansible-playbook tests/test.yml -i tests/inventory'
        }
        else{
            sh 'ansible-playbook tests/test.yml -i tests/inventory --check --diff'
        }
        
    }
}
